{
	"plugins": {
		"local": {
			"browsers": ["chrome", "firefox"],
			"browserOptions": {
				"chrome": [
					"headless",
					"disable-gpu",
					"no-sandbox"
				],
				"firefox": [
					"--headless"
				]
			}
		},
		"istanbul": {
			"dir": "./coverage",
			"reporters": ["text-summary", "lcov"],
			"include": [
				"**/*.js"
			],
			"exclude": []
		},
		"sauce": {
			"jobName": "cosmoz-grouped-list",
			"browsers": [{
				"browserName": "microsoftedge",
				"platform": "Windows 10",
				"version": ""
			}, {
				"browserName": "firefox",
				"platform": "Windows 10",
				"version": "latest"
			}]
		}
	}
}
